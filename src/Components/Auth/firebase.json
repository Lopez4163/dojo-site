// firebase.json
{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$userId": {
        ".validate": "auth.uid === $userId",
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "email": {
          ".validate": "newData.isString() && newData.val() === auth.token.email"
        },
        "role": {
          ".validate": "newData.isString() && (newData.val() === 'student' || newData.val() === 'instructor')"
        }
      }
    },
    "roles": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$userId": {
        ".validate": "auth.uid === $userId && newData.child('role').isString() && (newData.child('role').val() === 'student' || newData.child('role').val() === 'instructor')"
      }
    }
  }
}
